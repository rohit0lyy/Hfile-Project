
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HFile</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HFile.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <style>
        .navbar {
            height: 80px;
            flex-wrap: nowrap;
            justify-content: flex-start;
            background-color:darkblue;
        }

        .navbar-custom .nav-link
         {
            margin-right: 30px;
            color: white !important;
            text-shadow: 0px 0px 6px rgba(255, 255, 255, 0.8);
        }

            .navbar-custom .navbar-brand{
            color: white !important;
            margin-right: 40px;
            font-size: 25px;
             font-weight: 500;
            text-shadow: 0px 0px 6px rgba(255, 255, 255, 0.8);

            }

        

        .d-block{
            margin-top: 10px;
            width: 100%;
            height: 570px; /* change height as needed */
            object-fit: cover; /* crop to fill without distortion */
            object-position: center;
            display: block;
        }

        .containe {
            background-color: darkblue;

        }

        footer h5 {
            color: white;
            
        }
        footer p{
            color: white;
        }

        .col-md-12{
            background-color: yellow;
            color: black;
        }

     
    
      

        

      
    </style>

</head>
<body>



        <nav class="navbar navbar-expand-sm navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HFiles</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link"  asp-area="" asp-controller="Home" asp-action="privacy">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Article</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-warning" asp-controller="Account" asp-action="Signup">SignUp</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    

  
 

    <footer class="mt-auto">
        <div class="containe">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>About Us</h5>
                    <p>HFile is your easy-to-use medical record dashboard. Track and manage your health records quickly, securely, and conveniently—all in one place.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-decoration-none text-white">Home</a></li>
                        <li><a href="#" class="text-decoration-none text-white">Services</a></li>
                        <li><a href="#" class="text-decoration-none text-white">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Follow Us</h5>
                    <ul class="list-inline social-icons">
                        <li class="list-inline-item"><a href="#" class="text-white"><i class="bi bi-facebook">facebook</i></a></li>
                        <li class="list-inline-item"><a href="#" class="text-white"><i class="bi bi-twitter">twitter</i></a></li>
                        <li class="list-inline-item"><a href="#" class="text-white"><i class="bi bi-instagram">instagram</i></a></li>
                    </ul>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12 text-center">
                    <p class="text-black">&copy; 2025 Your Company. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
