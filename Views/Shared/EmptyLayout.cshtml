<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        .navbar-custom {
            background-color: darkblue;
            height: 80px;
        }

            .navbar-custom .navbar-brand {
                color: white !important;
                font-size: 25px;
                font-weight: 500;
                text-shadow: 0px 0px 6px rgba(255, 255, 255, 0.8);
            }

            .navbar-custom .dropdown-toggle {
                background: none;
                border: none;
                color: white;
                font-size: 1.8rem;
            }

                .navbar-custom .dropdown-toggle:hover {
                    color: #ffc107;
                }

        .dropdown-menu {
            right: 0;
            left: auto;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HFiles</a>

            @* <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Account/UpdateProfile">Profile</a></li>
                        <li><a class="dropdown-item text-danger" href="#">Logout</a></li>
                    </ul>
                </li>
            </ul> *@
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <!-- Profile Image -->
                        <img src="@(ViewBag.ProfileImage != null
                                     ? Url.Content("~/img/UserImages/" + ViewBag.ProfileImage)
                                     : "https://cdn-icons-png.flaticon.com/512/149/149071.png")"
                             class="rounded-circle" width="35" height="35" />

                        <!-- User Name -->
                        <span>@ViewBag.UserName</span>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Account/UpdateProfile">Profile</a></li>
                        <li><a class="dropdown-item text-danger" href="/Account/Logout">Logout</a></li>
                    </ul>
                </li>
            </ul>

        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Render optional Scripts section from views -->
    @RenderSection("Scripts", required: false)
</body>
</html>
