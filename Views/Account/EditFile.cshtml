@model HFile.Models.UploadFileModels

@{
    ViewData["Title"] = "Edit File";
    Layout = "EmptyLayout";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="mb-0">Edit File</h5>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }

                <form asp-action="EditFile" asp-controller="Account" method="post" enctype="multipart/form-data">
                    @* bind id explicitly so the POST parameter 'id' is populated reliably *@
                    <input type="hidden" name="id" value="@Model.ID" />

                    <div class="mb-3">
                        <label class="form-label">Current File</label>
                        <div>
                            @if (!string.IsNullOrEmpty(Model.FileName) || !string.IsNullOrEmpty(Model.File_extension))
                            {
                                var filePath = Url.Content("~/uploads/" + (Model.FileName ?? "") + (Model.File_extension ?? ""));
                                <a href="@filePath" target="_blank" class="btn btn-sm btn-outline-primary">View current file</a>
                            }
                            else
                            {
                                <span class="text-muted">No file available</span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FileName" class="form-label"></label>
                        <input asp-for="FileName" class="form-control" />
                        <span asp-validation-for="FileName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Replace File (optional)</label>
                        <input type="file" name="NewFileUpload" class="form-control" accept=".pdf,image/*" />
                        <div class="form-text">Upload a new PDF/image to replace the current file. Leave empty to keep existing file.</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <a asp-action="Dashboard" asp-controller="Account" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}